pipeline {
   agent any
   tools {
      nodejs 'node'
    }
    stages{
        stage('Clean workspace') {
             steps {
                echo 'Cleaning Workspace...'
                deleteDir()
            }
        }
        stage(checkout) {
            steps {
                git url: 'https://github.com/gayathri-panneerselvam/angular.git'
            }
        }
        stage(build){
            steps {
                npm update
                npm install
                sh 'ng build'
            }
        }

    }
}
